<div class="col-lg-9">
  <% if current_user.is_teacher %>
    <% if @students.present? %>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h2>Scores</h2>
        </div>
        <div class="panel-body">
          <% @students.each_with_index do |student, index| %>
            <div>
              <%= student.email.split('@').first %>
            </div>
            <table class="table">
              <thead>
              <th>No</th>
              <th>Quiz</th>
              <th>Score</th>
              </thead>
              <tbody>
              <% student.scores.each_with_index do |score, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td>
                    <%= score.quiz.title %>
                  </td>
                  <td>
                    <%= score.score %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="jumbotron text-center">
        <h2>No Students</h2>
      </div>
    <% end %>
  <% else %>
    <% if @scores.present? %>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h2>Scores</h2>
        </div>
        <div class="panel-body">
          <% if current_user.is_teacher %>
            <% @students.each_with_index do |student, index| %>
              <div>
                <%= student.email %>
              </div>
              <table class="table">
                <thead>
                <th>No</th>
                <th>Quiz</th>
                <th>Score</th>
                </thead>
                <tbody>
                <% student.scores.each_with_index do |score, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td>
                      <%= score.quiz.title %>
                    </td>
                    <td>
                      <%= score.score %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            <% end %>
          <% else %>
            <table class="table">
              <thead>
              <th>No</th>
              <th>Quiz</th>
              <th>Score</th>
              </thead>
              <tbody>
              <% @scores.each_with_index do |score, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td>
                    <%= score.quiz.title %>
                  </td>
                  <td>
                    <%= score.score %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="jumbotron text-center">
        <h2>You don't have any scores yet.</h2>
      </div>
    <% end %>
  <% end %>
</div>
