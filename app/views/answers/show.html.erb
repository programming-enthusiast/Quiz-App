<div class="col-lg-3">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h2>Answer</h2>
    </div>
  </div>

  <div class="list-group">
    <%= link_to 'Answers', quiz_question_answers_path(@answer.question.quiz, @answer.question), class: 'list-group-item list-group-item-info' %>
  </div>
</div>

<div class="col-lg-9">
  <div class="panel panel-info">
    <div class="panel-heading"><h2><%= @answer.text %></h2></div>

    <div class="panel-body">

      <%= link_to 'Edit', edit_polymorphic_path([@answer.question.quiz, @answer.question, @answer]),
                  class: 'btn btn-primary' %>
      <%= link_to 'Destroy', polymorphic_path([@answer.question.quiz, @answer.question, @answer]),
                  method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger pull-right' %>
    </div>
  </div>
</div>
