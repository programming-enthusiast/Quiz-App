<div class="col-lg-8">
  <%= form_for([question.quiz, question]) do |f| %>
      <% if question.errors.any? %>
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h2><%= pluralize(question.errors.count, 'error') %> prohibited this quiz from being saved:</h2>
            </div>

            <ul>
              <% question.errors.full_messages.each do |message| %>
                  <li class="text-danger"><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="panel panel-default">
        <div class="panel-body">

          <div class="row">
            <div class="col-lg-12">
              <div class="form-group">
                <%= f.label :text %>
                <%= f.text_field :text, class: 'form-control' %>
                <div class="help-block">Provide a question</div>
              </div>
            </div>
          </div>

          <hr>

          <%= f.submit nil, class: 'btn btn-primary' %>
          <%= link_to 'Cancel', quiz_questions_path(@question.quiz), class: 'btn btn-default pull-right' %>

        </div>
      </div>
  <% end %>
</div>