<div ng-controller="PlayCtrl" class="col-lg-12">
  <div ng-repeat="question in quiz.questions" ng-show="quiz.questions.indexOf(question) == currentQuestion">

    <div class="row">
      <div class="col-lg-2 text-center">
        <h5 class="text-info">Question {{ currentQuestion + 1 }} out of {{ quiz.questions.length }}</h5>
      </div>

      <div class="col-lg-8 text-center">
        <div class="page-header">
          <h1 style="min-height: 78px">{{ question.text }}</h1>
        </div>
      </div>

    </div>

    <div class="row">
      <div ng-repeat="answer in question.answers" class="col-lg-6">
        <button style="margin: 20px; padding: 20px" ng-click="nextQuestion(answer)"
                type="button" class="btn btn-info btn-lg btn-block">
          {{ answer.text }}
        </button>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div ng-show="showScore">
    <div class="jumbotron">
      <div class="page-header">
        <h1 class="text-center">Your score is {{ score }}</h1>
      </div>

      <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
          <a href="javascript:void(0)" ng-click="retryQuiz()" class="btn btn-warning btn-lg">Retry</a>
          <a href="/" class="btn-primary btn-lg pull-right">Quizzes</a>
        </div>
      </div>
    </div>
  </div>
</div>
